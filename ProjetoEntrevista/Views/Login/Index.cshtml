@model ModelUsuario;
@{
    Layout = "_LayoutSemlogin"; //Esse descrição do Layout tem que ser identica a descrição criada na pasta View/Shared
    ViewData["Title"] = "Login";
}
 <div class="text-center">
    @if(TempData["MensagemErro"]!= null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
    
        }

        @if(TempData["MensagemSucesso"]!= null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-success btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemSucesso"]
            </div>
    
        }

    <form asp-action="Logar" asp-controller="Login" method="post">
      <div class="mb-3 col-md-12">
        <label for="exampleInputEmail1" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="" required>
      </div>
      <div class="mb-3 col-md-12">
        <label for="exampleInputPassword1" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="" required> 
      </div>
      <p class="mb-3 form-check">
            <label class="form-check-label" for="exampleCheck1">Esqueceu a senha?</label>
            <a asp-controller="Login" asp-action="RedefinirSenha">Redefinir a senha</a>      
      </p>
      <button type="submit" class="btn btn-primary">Logar</button>
    </form>
</div>